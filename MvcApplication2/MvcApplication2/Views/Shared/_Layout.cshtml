<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/site.css")

    
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/Scripts/ajustes.js"></script>

</head>
<body>
    
    <div class="site-wrapper">

        <div class="site-wrapper-inner">

            <div class="cover-container">

                <div class="masthead clearfix">
                    <div class="inner">
                        <h3 class="masthead-brand"></h3>
                        <nav>
                            <ul class="nav masthead-nav">
                                <li ><a onclick="location.href = '@Url.Action("Index", "Perfil")'">Perfil</a></li>
                                <li ><a onclick="location.href = '@Url.Action("Index", "Projetos")'">Projetos</a></li>
                                <li ><a onclick="location.href = '@Url.Action("Index", "Contato")'">Contato</a></li>
                                <li><a onclick="location.href = '@Url.Action("Index", "Experiencia")'">Experiência</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>

                <div id="Rb">
                    @RenderBody()
                </div>
                <div class="mastfoot">
                    <div class="inner">
                        <p><a href="http://github.com/carlosxvegan">GIT</a> <a href="https://twitter.com/">Twitter</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    @Scripts.Render("~/Scripts/jquery-1.8.2.min.js")
    @Scripts.Render("~/Scripts/bootstrap.js")
    
    @RenderSection("scripts", required: false)
</body>
</html>
